{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "sourceMap": false,
    "lib": ["es2015"]
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "node_modules", "lib" ]
}
